!!!
%html
  %head
    %title UniDev
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .nav.navbar.navbar-inverse.navbar-static-top
      .container
        = link_to 'UniDev', root_path, class: 'navbar-brand'
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to 'Dashboard', dashboard_path
            %li.dropdown
              %a.dropdown-toggle{ "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: '#', role: 'button' }
                Profile
                %span.caret
              %ul.dropdown-menu
                %li= link_to 'View Profile', current_user
                %li= link_to 'Control Panel',  edit_user_registration_path
                %li.divider{ role: 'separator' }
                %li= link_to 'Log Out', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Log In', new_user_session_path
            %li= link_to 'Register', new_user_registration_path
    - flash.each do |name, msg|
      - if name == 'alert'
        = content_tag :div, msg, class: 'alert alert-danger'
      - elsif name == 'notice'
        = content_tag :div, msg, class: 'alert alert-info'
      - else
        = content_tag :div, msg, class: "alert alert-#{name}"
    = yield
