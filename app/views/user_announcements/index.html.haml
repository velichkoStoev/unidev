.container
  %h2 Control Panel
  .row
    .col-md-4
      .panel.panel-danger
        .panel-heading Panels
        %ul.list-group
          = link_to 'General Settings', edit_user_registration_path, class: 'list-group-item'
          = link_to 'Skills', edit_user_path(current_user), class: 'list-group-item'
          = link_to 'Projects', user_projects_path(current_user), class: 'list-group-item'
          = link_to 'Announcements', user_announcements_path(current_user), class: 'list-group-item'
    .col-md-8
      .panel.panel-info
        .panel-heading My announcements
        %table.table.table-bordered
          %tr
            %th Text
            %th Project
          - @announcements.each do |announcement|
            %tr
              %td
                = truncate(announcement.text, length: 25)
                = link_to '(edit)', edit_user_announcement_path(current_user.id, announcement.id)
              %td
                = link_to announcement.project.name, announcement.project
      =link_to 'New announcement', new_user_announcement_path(current_user.id), class: 'btn btn-default'
