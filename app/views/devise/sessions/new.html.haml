.container
  .row
    .col-md-4
      %h2 Log in
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, class: ''
          = f.input :password, required: false, hint: "#{link_to 'Forgot your password?', new_password_path(resource_name)}".html_safe
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, 'Log In'
