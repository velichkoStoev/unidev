.container-fluid
  .container.row
    %h3
      = pluralize(@users.count, 'result')
      found.
  .row
    .col-md-12
      .panel.panel-info
        .panel-heading
          %h3 Users
        %table.table.table-bordered
          %tr
            %th Name
            %th E-mail
            %th Faculty
            %th About
          - @users.each do |user|
            %tr
              %td= link_to  user.full_name, user_path(user.id)
              %td= user.email
              %td= user.faculty
              %td= user.about_me
